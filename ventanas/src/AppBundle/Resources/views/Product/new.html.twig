{% extends 'AppBundle::adminlayout.html.twig' %}

{% block pagestylesheets %}
{% endblock %}
{% block javascripts %}
  <script src="{{ asset('bundles/maithcommonadmin/js/tinymce/tinymce.min.js') }}"></script>
  <script src="{{ asset('bundles/app/admin/js/basicstarttinymce.js') }}"></script>
{% endblock %}

{% block body -%}
<div class="row">
  <div class="col-lg-10">
    <section class="panel">
      <header class="panel-heading">{% trans %}product_create_entry{% endtrans %}</header>
      <div class="panel-body">
        <form action="{{ path('admin_product_create') }}" method="post" {{ form_enctype(form) }} role="form">
          <div class="form-group">
            {{ form_errors(form.name) }}
            <label for="{{ form.name.vars.id }}">{% trans %}product_name{% endtrans %}</label>
            {{ form_widget(form.name, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
            {{ form_errors(form.shortDescription) }}
            <label for="{{ form.shortDescription.vars.id }}">{% trans %}product_short_description{% endtrans %}</label>
            {{ form_widget(form.shortDescription, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
            {{ form_errors(form.description) }}
            <label for="{{ form.description.vars.id }}">{% trans %}product_description{% endtrans %}</label>
            {{ form_widget(form.description, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
            {{ form_errors(form.position) }}
            <label for="{{ form.position.vars.id }}">{% trans %}product_position{% endtrans %}</label>
            {{ form_widget(form.position, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="checkbox">
                {{ form_errors(form.featured) }}
                <label for="{{ form.featured.vars.id }}">
                    {{ form_widget(form.featured, {'attr' : {'class' : ''}}) }}{% trans %}product_featured{% endtrans %}
                </label>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-default">{% trans %}product_save{% endtrans %}</button>
          </div>	
              {{ form_rest(form) }}
          </form>
        </div>
      </section>
    </div>
    <div class="col-lg-8 text-center">
	  <a href="{{ path('admin_product') }}" class="btn btn-info">
		  {% trans %}product_back_to_list{% endtrans %}
	  </a>
	</div>
</div>    
{% endblock %}
